<header class="home__header">
    <nav class="header_nav">
        <!--    NAV BAR HEADER  -->
        <% if (!locals.userLogin) { %>
           <!--  //navBar - Login -->
            <li><a href="/users/login"><i class="fa-solid fa-user"></i></a></li>
            <!-- //navBar - registro -->
            <li><a href="/users/register"><i class="fa-solid fa-envelope"></i></a></li>
            
        <% }else{  %>
            <li><a href="/users/profile"  style="color: white  ; font-weight: 900; text-transform: uppercase;"><%= userLogin.name %></a> </li>
            <li ><a style="color: white  ; font-weight: 900;" href="/users/logout">SALIR</a></li>
        <% } %>
        
        <% if (locals.userLogin?.rol !== "admin") { %>
          <!--  //navBar - carrito -->
        <li><a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>
        <% } %>
    
    
    
          <!--  //navBar - caso usuario sea administrador-->
        <% if (locals.userLogin?.rol === "admin") { %>
             <!--  //navBar - aÃ±adir libro - vista administrador,lista, acciones -->
            <li><a href="/products/create"><i class="fa-solid fa-screwdriver-wrench"></i></a></li>
            <li><a href="/admin"><i class="fa-solid fa-book"></i></a></li>
        <% } %>
    
    
        
        <li class="idioma"><a href=""><i class="fa-solid fa-globe"></i> English</a></li>
    </nav>
    <!--   LOGOS HEADER -->
    <div class="container_home_header_logo">
        <a class="deRegreso" href="/">
        <div class="header__logo_home"></div></a>
        <br>
        <div class="header__logo2_home"></div>
    </div>

    <!--   BUSCADOR -->
    <div class="header_buscador">
        <form action="/search" method="GET">

            <input type="text" name="keywords" placeholder="Encuentra tu libro ideal" />
            <button type="submit" class="lupa"><i class="fa-solid fa-magnifying-glass"></i></button>


        </form>
        
    </div>

    <!--      MENU HAMBURGUESA -->
    <nav class="home_header_nav_categorias">

        <input type="checkbox" id="check">
        <label for="check" class="bar-btn">
            <i class="fa-solid fa-bars iconoHamburguesa"></i>
        </label>
        <ul class="home_nav-menu">
            <% genres.forEach(genre => { %>
                <li><a href="/products/filter?genre=<%= genre.id %>"><%= genre.name %></a></li>
            <% }) %>
        </ul>
    </nav>

    <!-- BANNERS O CARRUSEL -->
    <div class="header_banner">
        <img src="/images/banner/banner2.jpg" alt="banner">
    </div>
    <div class="header_banner-desktop">
        <img src="/images/banner/banner3.jpg" alt="">
    </div>
</header>